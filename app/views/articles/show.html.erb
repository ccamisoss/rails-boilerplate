<h1><%= @article.title =%></h1>

<div>
  <p>Written by: <strong><%= @article.user.email =%></strong></p>
</div>

<div>
  <p><%= @article.content =%></p>
</div>

<% if @article.categories.any? %>
  <div>
    <p>Tags:</p>
    <% @article.categories.each do |category| %>
      <span style="background-color:<%= category.color %>; color: white">
        <%= link_to category.title, category %>  
      </span>          
    <% end %>  
  </div>
<% end %>  

<div>
  <%= button_to "Delete article", @article, method: :delete %>
</div>
<div>
  <%= link_to "Edit article", edit_article_path %>
</div>

