<div class="flex flex-col w-96 my-6 border border-black border-b-4 border-r-4 bg-clip-border text-gray-700 shadow-md">
  <div class="p-6">
    <h3 class="mb-2 block text-2xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
      <%= article.title %>
    </h3>
    <p class="block font-sans text-base font-light leading-relaxed text-inherit antialiased">
      Written by <%= article.user.email %>
    </p>
    <p class="block font-sans text-base font-light leading-relaxed text-inherit antialiased">
      <%= article.created_at.strftime("%d/%m %H:%M") %>
    </p>
  </div>
  <div class="p-6 pt-0">
    <button
      class="select-none bg-black py-2 px-4 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-pink-500/20 transition-all hover:shadow-lg hover:shadow-pink-500/40 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
      type="button"
    >
      <%= link_to "See more", article %>
    </button>
  </div>
</div>


<link
  rel="stylesheet"
  href="https://unpkg.com/@material-tailwind/html@latest/styles/material-tailwind.css"
/>
 

<script src="https://unpkg.com/@material-tailwind/html@latest/scripts/ripple.js"></script>